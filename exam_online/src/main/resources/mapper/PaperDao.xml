<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wzy.exam_online.dao.PaperDao">


<select id="getWrongQuestionsIdByPid" parameterType="list" resultType="string">
    SELECT qid from paper,my_answer WHERE paper.pid=my_answer.pid AND my_answer.t_f=0
    <if test="pids !=null and pids.size()>0">
        AND paper.pid IN
            <foreach collection="pids" item="pid" open="(" close=")" separator=",">
                #{pid}
            </foreach>
        </if>
</select>
    <select id="getQuestionsIdByPid" parameterType="list" resultType="string">
        select question_id from paper
        <if test="pids !=null and pids.size()>0">
            and pid in
            <foreach collection="pids" item="pid" open="(" close=")" separator=",">
                #{pid}
            </foreach>
        </if>
    </select>

    <select id="getOverAll"  resultType="paper">
        SELECT paper.*,score from paper,score where paper.pid =score.paper_id and paper_state=1;
    </select>

</mapper>
